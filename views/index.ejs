<%- include ("./partials/header.ejs") %> 

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col"></th>
        
      </tr>
    </thead>
