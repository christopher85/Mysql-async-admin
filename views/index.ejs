    <thead class="thead-light">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col"></th>
        
      </tr>
    </thead>
    <tbody>
      
      <% energies.forEach(function(energy) {%>
          <tr>
  
                <th scope="row" style="width: 100px;"><%= energy.id %></th>
                <td style="width: 100px;"><%= energy.name %></td>


                <form action="post" action="/categories/delete/<%= energy.id %>?_method=delete">
